        <item name="android:textColor">@color/main_text</item>
        <item name="android:textStyle">bold</item>
        <item name="fontWeight">900</item>
    </style>

    <style name="style_type_movie_section">
        <item name="android:textSize">@dimen/text_size_type_movie_section</item>
